# MongoDB Configuration
# For local development with MongoDB on host: use host.docker.internal
# For MongoDB in Docker: use mongodb:27017
# For remote MongoDB: use your remote connection string
MONGO_URI=mongodb://host.docker.internal:27017
MONGO_DB_NAME=aegis

# Redis Configuration
# For Redis in Docker (via docker-compose): use redis:6379
# For Redis on host: use host.docker.internal:6379
REDIS_HOST=redis:6379
REDIS_PASSWORD=
REDIS_STREAM_KEY=aegis:submissions
REDIS_CONSUMER_GROUP=aegis:group
REDIS_DEAD_LETTER_KEY=aegis:dlq
STREAM_RETENTION_DURATION=48

# Astra Service
ASTRA_BASE_URL=http://host.docker.internal:8081
ASTRA_API_KEY=your_astra_api_key_here

# Admin API Key
ADMIN_API_KEY=

# Rate Limiting
RATE_LIMIT_RPS=10.0

# Concurrency
MAX_CONCURRENT_COMPUTE=5

# Computation
COMPUTATION_TIMEOUT_MINUTES=30
BATCH_SIZE=100

# Test Risk Thresholds
TEST_RISK_SAFE=0.0
TEST_RISK_MODERATE=0.3
TEST_RISK_HIGH=0.7
TEST_RISK_CRITICAL=0.9

# Logging
LOG_LEVEL=trace

# Server
SERVER_PORT=8080
